<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Water Peak Online System</title>
  <link href="/css/customer_table.css" rel="stylesheet" />
</head>

<!-- Banner -->

<body class="main-page">
    <div class="header-container">
        <div class="header-title">Water Peak Online System</div>
        <p class="contacts">Contacts: 0917-8002885 0977-4916202</p>
      </div>
    
      <div>
      <a class="home-button" href="/main_menu"><img src = "/images/home.png"></a>
      </div>
    
      <div class="footer-container">
        <div class="preFooter"></div>
        <div class="footer">
            <p class="footer-text">Copyright Â© 2023 | G2 Solutions</p>
        </div>
    </div> 

<div class="table-box">
  <table class="table" id="t1">

    <th class="c-status-bar">
      <div class="filter-box">
        <span class="filter-text" id="name">NAME</span>
        <button class="btn-filter c-btn-margin" id="btn-name"> V </button>
      </div>
    </th>

    <th class="c-status-bar"id="c-phonenumber">PHONE NUMBER</th>
    <th class="c-status-bar" id="c-address">ADDRESS</th>

    <th class="c-status-bar">
      <div class="filter-box">
        <span class="filter-text">TYPE</span>
        <button class="btn-filter c-btn-margin" id="btn-type"> V </button>
      </div>
    </th>

    <th class="c-status-bar" id="remarks">REMARKS</th>
    <th class="c-status-bar" id="update">UPDATE</th>

    {{#each people}}
      <tr>
        <td class="font" id="name">{{Name}}</td>
        <td class="font" id="phoneNum">{{PhoneNumber}}</td>
        <td class="font">{{Address}}</td>
        <td class="font">{{Type}}</td>
        <td class="font">{{Remarks}}</td>
        <td>
          <span class = "update-button">
            <a href="/update_customer_page?id={{id}}">Edit</a>
          </span>
        </td>
      </tr>
    {{/each}} 
    
  </table>
</div>
  <br><br><br>
  <script src="/JS/customer.js"></script>
</body>

</html>