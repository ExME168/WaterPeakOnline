<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Water Peak Online System</title>
  <link href="/css/delivery_table.css" rel="stylesheet" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="/JS/deliveryJQuery.js"></script>
</head>

<body class="main-page" onload="sortDate()">

  <div class="header-container">
    <div class="header-title">Water Peak Online System</div>
    <p class="contacts">Contacts: 0917-8002885 0977-4916202</p>
  </div>

  <div>
  <a class="home-button" href="/main_menu"><img src = "/images/home.png"></a>
  </div>

  <div class="footer-container">
    <div class="preFooter"></div>
    <div class="footer">
        <p class="footer-text">Copyright Â© 2023 | G2 Solutions</p>
    </div>
  </div> 
  
    <div class="table-box">
      <table class="table" id="t1">
        <th class="status-bar">NAME</th>
        <th class="status-bar">PHONE NUMBER</th>

        <th class="status-bar">
          <form id="form" type="submit" >
            <label>DATE</label>
          <input type="date" id="date" onchange="formatDate()">
          </form>
        </th>

        <th class="status-bar">
          <div class="filter-box" id="type">
            <span class="filter-text" id="margin">TYPE</span>
            <button class="btn-filter btn-margin" id="btn-type"> V </button>
          </div>
        </th>

        <th class="status-bar" id="address">ADDRESS</th>
        <th class="status-bar" id="amount">GALLONS ORDERED</th>
        <th class="status-bar" id="amount">AMOUNT PAID</th>

        <th class="status-bar" id="status">
          <div class="filter-box">
            <span class="filter-text" id="margin">STATUS</span>
            <button class="btn-filter" id="btn-status"> V </button>
          </div>
        </th>
        </th>

        <th class="status-bar">Remarks</th>
        <th class="status-bar" id="update">UPDATE</th>
        
        {{#each order}}
          <tr>
            <td class="font">{{Name}}</td>
            <td class="font">{{PhoneNumber}}</td>
            <td class="font">{{Date}}</td>
            <td class="font">{{Type}}</td>
            <td class="font">{{Address}}</td>
            <td class="font">{{GallonsOrdered}}</td>
            <td class="font">{{AmountDue}}</td>
            <td class="font">{{Status}}</td>
            <td class="font">{{Remarks}}</td>
            <td>
              <span class = "update-button">
                <a href="/update_order_page">Edit</a>
              </span>
            </td>
          </tr>
        {{/each}} 

      </table>
    </div>
  <br><br><br>
  <script src="/JS/delivery.js"></script>
</body>

</html>