  <link href="/css/add_customer.css" rel="stylesheet" />
</head>

<body>

  <div class="header-container">
      <div class="header-title">Water Peak Online System</div>
      <p class="contacts">Contacts: 0917-8002885 0977-4916202</p>
  </div>

  <div>
    <a class="home-button" href="/main_menu"><img src = "/images/home.png"></a>
  </div>

  <div class="footer-container">
      <div class="preFooter"></div>
      <div class="footer">
          <p class="footer-text">Copyright Â© 2023 | G2 Solutions</p>
      </div>
  </div>

  <div class="add-customer">
    <div class="title">
      Add Customer
    </div>

    <form action="/add_customer" method="post">
      <div class="form">
        <div class="input-field">
          <label for="name">Name/Company Name</label>
          <input name="name" type="text" placeholder="Enter your name" required>
        </div>
        <div class="input-field">
          <label for="phoneNum">Mobile Number</label>
          <input name="phoneNum" type="tel" placeholder="Enter your number"  pattern="[0-9]{11}" required>
        </div>
        <div class="input-field">
          <label for="address">Address</label>
          <input name="address" type="text" placeholder="Enter address" required>
        </div>
        <div class="input-field">
          <label for="type">Customer Type</label>
          <select name="type">
            <option value="Residential">Residential</option>
            <option value="Office w/ Dispenser">Office w/ Dispenser</option>
            <option value="Office w/o Dispenser">Office w/o Dispenser</option>
          </select>
        </div>
        <div class="input-field">
          <label>Remarks</label>
          <input name="remarks" type="text" placeholder="Enter remarks">
        </div>
        <p></p>
        <div class="button">
          <input type="submit" value="Submit" class="button add">
        </div>
      </div>
    </form>
  </div>


</body>

</html>